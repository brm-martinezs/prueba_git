/*
-Deben ser elementos por default que lucirán igual en todo el sitio, Es .
-Ningún estilo de estos elementos selectores deberá usar !important.
-No usar selectores tipo class o id.
*/

	
a
	text-decoration none
	color white
	
	&:hover
		text-decoration none
		cursor pointer
	&:focus, &:visited
		outline 0
		text-decoration none
		
	img
		border 0
	
body
	path('bg.png')
	background-repeat repeat
	background-color black
	color white
	font-size 1.3em
	font-family $bebas
button
	background-color transparent
	border solid 0.2rem white
	color white
	font-size 2.5rem
	padding 1rem
	&:hover
		border-color darken($Azul, 40%)
		color darken($Azul, 40%)
		transitionBase()
	&:focus, &:visited, &:active
		color $Naranja
		outline 0
footer
	clear both
h1, h2, h3
	color white
	font-family $bebas
input
	background-color transparent
	border solid 0.2rem white
	width 100%
	padding 0 1rem
label
	width 100%
select
	background-color transparent
	border solid 0.2rem white
	border-radius none
	padding 1rem
	width 100%
#arptc
	fill white